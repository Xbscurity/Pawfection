﻿@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DogStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DogStore.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>



  
        .card {
            border: none;
            transition: transform 0.3s, box-shadow 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .btn-outline-secondary {
           
            border-color: #6c757d;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: white;
            }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .text-muted {
            color: #6c757d;
        }



        .footer {
            position: fixed;
            
            width: 100%;
            background-color: #f8f9fa;
            padding: 10px 0; 
            text-align: center;
            color: #6c757d; 
            bottom: 0;
            z-index: 1000}

        .navbar .nav-link {
            font-size: 20px; 
        }

        .navbar {
            position: relative;
        }

        .navbar-nav.ml-auto {
            margin-right: 100px; 
        }

       
        .rounded-circle {
            width: 45px; 
            height: auto; 
        }
  
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="mr-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/dogshelterLogo.jpg" alt="DogStore Logo" height="50">DogStore
                </a>
            </div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Pet" asp-action="Index">Pets</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
                </li>
            </ul>
            <div class="navbar-nav ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            @if (!string.IsNullOrEmpty(currentUser.Image))
                            {
                                <img alt="Image" src="@currentUser.Image" height="30" class="rounded-circle">
                            }
                            else
                            {
                                <img src="~/images/default-user-account-photo.jpg" alt="User Photo" class="rounded-circle">
                            }
                            
                        </a>
                        <ul class="dropdown-menu text-small" style="">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <form asp-area="" asp-controller="Account" asp-action="Logout">
                                <button class="btn btn-link dropdown-item">Log out</button>
                            </form>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </nav>
    </header>
    <div style="margin-top: 100px;">

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div >
            &copy; 2023 - DogStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</div>
</body>
</html>
